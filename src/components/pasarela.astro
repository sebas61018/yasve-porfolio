---
const skills = [
  "Adobe Illustrator",
  "Adobe Premiere Pro",
  "Análisis de datos",
  "Aptitudes de organización",
  "Comunicación",
  "Diseño gráfico",
  "Estrategia de redes sociales",
];
---
<div class="relative overflow-hidden w-full p-4 rounded-lg">
  <!-- Efecto de difuminado en los bordes -->
  <div class="absolute inset-y-0 left-0 w-12 bg-gradient-to-r from-gray-800 via-gray-800/50 to-transparent pointer-events-none z-10"></div>
  <div class="absolute inset-y-0 right-0 w-12 bg-gradient-to-l from-gray-800 via-gray-800/50 to-transparent pointer-events-none z-10"></div>

  <!-- Contenido que se desplaza -->
  <div class="flex w-max animate-marquee space-x-8">
    <!-- Primera repetición -->
    {skills.map((skill) => (
      <div class="text-white text-lg font-medium mx-4 whitespace-nowrap">{skill}</div>
    ))}
    <!-- Segunda repetición -->
    {skills.map((skill) => (
      <div class="text-white text-lg font-medium mx-4 whitespace-nowrap">{skill}</div>
    ))}
  </div>
</div>

<style>
  @keyframes marquee {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    animation: marquee 15s linear infinite;
  }
</style>
